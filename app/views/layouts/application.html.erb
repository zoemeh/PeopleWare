<!DOCTYPE html>
<html>
  <head>
    <title>PersonaWare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
          <ul class="nav col-8 mb-2 justify-content-center mb-md-0">
            <li><a href="<%= root_path %>" class="nav-link px-2 link-secondary"><%= t('home').capitalize %></a></li>
            <% if signed_in? %>
              <li><a href="<%= skills_path %>" class="nav-link px-2 link-dark">Competencias</a></li>
              <li><a href="<%= languages_path %>" class="nav-link px-2 link-dark">Idiomas</a></li>
              <li><a href="<%= trainings_path %>" class="nav-link px-2 link-dark">Capacitaciones</a></li>
              <li><a href="<%= jobs_path %>" class="nav-link px-2 link-dark">Puestos</a></li>
              <li><a href="<%= candidates_path %>" class="nav-link px-2 link-dark">Candidatos</a></li>
              <li><a href="<%= employees_path %>" class="nav-link px-2 link-dark">Empleados</a></li>
              <li><a href="<%= reports_index_path %>" class="nav-link px-2 link-dark">Reportes</a></li>
            <% end %>
          </ul>
          <div class="col-4 text-end">
            <% if signed_in? %>
              <%= button_to t("logout").capitalize, sign_out_path, method: :delete, class: "btn btn-primary" %>
            <% else %>
              <a href="<%=sign_in_path %>" class="btn btn-outline-primary me-2"><%= t('login').capitalize %></a>
            <% end %>
          </div>
        </header>
      </div>
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
